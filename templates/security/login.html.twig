{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{{ 'account.logout' | trans }}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'account.signin' | trans }}</h1>
    <div>
      <label for="inputEmail">{{ 'form.email' | trans }}</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div>
      <label for="inputPassword">{{ 'form.password' | trans }}</label>
      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox">
      <label>{{ 'form.remember-me' | trans }}</label>
      <input type="checkbox" name="_remember_me">
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        {{ 'account.signin' | trans }}
    </button>
</form>
{% endblock %}
